{
  "name": "@cleanhaus/calendar",
  "version": "1.0.4",
  "description": "Cross-platform calendar component for React Native and Web",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "react-native": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./dist/index.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./next-plugin": "./next-plugin.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "next-plugin.js"
  ],
  "scripts": {
    "build": "tsup",
    "build:pack": "npm run build && npm pack",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run build"
  },
  "keywords": [
    "react-native",
    "calendar",
    "web",
    "cross-platform",
    "expo",
    "typescript",
    "cleanhaus"
  ],
  "author": "CleanHaus",
  "license": "MIT",
  "peerDependencies": {
    "calendarize": "^1.1.0",
    "dayjs": "^1.11.0",
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "react-native-reanimated": ">=3.0.0",
    "react-native-web": ">=0.19.0"
  },
  "peerDependenciesMeta": {
    "react-native-web": {
      "optional": true
    },
    "react-native-reanimated": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-native": "^0.73.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "@cleanhaus:registry": "https://npm.pkg.github.com"
  }
}
