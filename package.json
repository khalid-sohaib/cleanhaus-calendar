{
  "name": "cleanhaus-calendar",
  "version": "1.0.0",
  "description": "Cross-platform calendar component for React Native and Web",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "react-native": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "react-native": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./next-plugin": "./next-plugin.js",
    "./package.json": "./package.json"
  },
  "files": [
    "**/*.ts",
    "**/*.tsx",
    "src/shared/**/*.png",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "next-plugin.js",
    "!**/*.test.ts",
    "!**/*.test.tsx",
    "!**/*.spec.ts",
    "!**/*.spec.tsx",
    "!node_modules",
    "!dist"
  ],
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check"
  },
  "keywords": [
    "react-native",
    "calendar",
    "web",
    "cross-platform",
    "expo",
    "typescript",
    "cleanhaus"
  ],
  "author": "CleanHaus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cleanhaus/calendar-component.git"
  },
  "peerDependencies": {
    "calendarize": "^1.1.0",
    "dayjs": "^1.11.0",
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "react-native-reanimated": ">=3.0.0",
    "react-native-web": ">=0.19.0"
  },
  "peerDependenciesMeta": {
    "react-native-web": {
      "optional": true
    },
    "react-native-reanimated": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-native": "^0.73.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
